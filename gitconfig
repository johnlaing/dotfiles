[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  wordRegex = [^[:space:],)(]
  #wordRegex = [^\b]
[alias]
  fa = fetch --all
  pr = pull --rebase
  l = log --pretty=format:'%C(yellow)%h %Cblue%ad %Cgreen%an %Cred%d %Creset%s ' --graph --date=short --date-order
  la = log --pretty=format:'%C(yellow)%h %Cblue%ad %Cgreen%an %Cred%d %Creset%s ' --graph --date=short --date-order --all
  fm = merge --no-ff
  k = !gitk --all --date-order
  bv = branch -vv
  co = checkout
  cm = commit -m
  save = commit -am "WIP"
[diff]
  context = 4
[core]
  excludesfile = ~/.gitignore
# local
[include]
  path = ~/.gitconfig.local
[push]
	default = upstream
